    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/microservices": "^10.4.4",
    "@nestjs/platform-express": "^10.0.0",
    "bullmq": "^5.21.2",
    "dataloader": "^2.2.2",
    "graphql": "^16.9.0",
    "graphql-redis-subscriptions": "^2.6.1",
    "graphql-subscriptions": "^2.0.0",
